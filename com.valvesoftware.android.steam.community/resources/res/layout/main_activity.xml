<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/splitView_Contents"
        android:background="@color/primary_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/steam_toolbar"
            android:background="@color/title_background"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
        <com.valvesoftware.android.steam.community.views.MenuBar
            android:id="@+id/menu_bar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <fragment
            android:id="@+id/searchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="com.valvesoftware.android.steam.community.fragment.SearchBarFragment"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/fragment_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ExpandableListView
        android:layout_gravity="left"
        android:id="@+id/navigation"
        android:background="@color/secondary_background"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:scrollbars="none"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"
        android:groupIndicator="@null"
        android:childDivider="@color/secondary_background"
        android:divider="@color/secondary_background"
        android:dividerHeight="7dp"
        android:choiceMode="singleChoice"/>
</android.support.v4.widget.DrawerLayout>
